// A simple program in 'C' Language to perform the operation of "Addition" , "Subtraction" , "Multiplication" , "Division"
#include<stdio.h>
#include<conio.h>
void main()
{
  char o;
float a,b,c;
clrscr();
printf("Enter the first letter of desired operation in upper case like A , S , M , D\n");
scanf("%c",&o);
printf("Enter the first number\n");
scanf("%f",&a);
printf("Enter the second number\n");
scanf("%f",&b);
switch(o)
{
case 'A' : 
c=a+b;
printf("Sum of %f and %f is : %f",a,b,c);
break;
case 'S' : 
c=a-b;
printf("SSbtraction of %f from %f is : %f",b,a,c);
break;
case 'M' : 
c=a*b;
printf("Multiplication of %f and %f is : %f",a,b,c);
break:
 case 'D' : 
c=a/b;
printf("Division of %f and %f is : %f",a,b,c);
break;
default :
printf("Wrong entry ");
}
getch();
}
